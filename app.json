{
    "name": "Transformative",
    "description": "A Sinatra, GitHub, PostGres, S3 Indieweb site with Micropub and Superfeedr",
    "keywords": ["website", "indieweb", "superfeedr", "micropub"],
    "repository": "https://github.com/barryf/transformative",
    "addons": [
      {
        "plan": "heroku-postgresql:hobby-dev",
        "as": "DATABASE"
      },
      {
        "plan": "cloudcube:free"
      }
    ],
    "env": {
        "SITE_URL": {
            "description": "e.g. https://barryfrost.com/",
            "required": true
        },
        "MEDIA_URL": {
            "description": "e.g. https://barryfrost-media.s3.amazonaws.com/",
            "reqired": true
        },
        "GITHUB_USER": {
            "description": "e.g. barryf",
            "required": true
        },
        "GITHUB_REPO": {
            "description": "name of a separate repo to use as your content store",
            "required": true
        },
        "GITHUB_ACCESS_TOKEN": {
            "description": "a personal access token generated from your GitHub account",
            "required": true
        },
        "GITHUB_SECRET": {
            "description": "a (strong) random password/token you've generated for the webhook",
            "required": true
        },
        "SILOPUB_TWITTER_TOKEN": {
            "description": "a token generated by SiloPub when syndicating to Twitter",
            "required": true
        },
        "CAMO_KEY": {
            "description": "your [Camo][] instance private key",
            "required": false
        },
        "CAMO_URL": {
            "description": "your [Camo][] instance root URL",
            "required": false
        },
        "PUSHOVER_USER": {
            "description": "account user for use with Pushover",
            "required": false
        },
        "PUSHOVER_TOKEN": {
            "description": "account access token for use with Pushover",
            "required": false
        },
        "PINBOARD_AUTH_TOKEN": {
            "description": "Pinboard API key",
            "required": false
        },
        "PUBSUBHUBBUB_HUB": {
            "description": "e.g. https://barryfrost.superfeedr.com",
            "required": false
        },
        "RACK_ENV": {
            "value": "production",
            "required": true
        }
    },
    "environments": {
      "review": {
        "env": {
        }
      }
    },
    "formation": {
      "web": {
        "quantity": 1,
        "size": "free"
      }
    },
    "buildpacks": [
      {
        "url": "heroku/ruby"
      }
    ]
  }
  