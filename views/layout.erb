          <li><a rel="me" href="https://pinboard.in/u:barryf">Pinboard</a></li>
          <li><a rel="me" href="http://instagram.com/barryf">Instagram</a></li>
          <li><a rel="me" href="http://www.last.fm/user/barryf">Last.fm</a></li>
        </ul>
        <%= erb :_search_form %>
      </footer>
    <% end %>

  </body>
</html>